<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    android:padding="16dp">

    <!-- Title for User List -->
    <TextView
        android:id="@+id/user_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My List!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />


    <!-- RecyclerView for movie list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movie_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:id="@+id/homeButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/homeicon"
        android:background="@android:color/transparent"
        android:contentDescription="Home Button"
        android:visibility="visible"/>

    <!-- User List Button (Bottom Right Corner) -->
    <ImageButton
        android:id="@+id/userListButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/userlist"
        android:background="@android:color/transparent"
        android:contentDescription="User List Button"
        android:visibility="visible"/>

</RelativeLayout>
